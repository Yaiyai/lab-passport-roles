<div class="no-form">

    <h2>Cotilla, aqui tienes todos los usuarios!</h2>

    <div class="row">

        <div class="col-md-12">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Nombre</th>
                        <th scope="col">Username</th>
                        <th scope="col">Role</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each data}}
                    <tr>
                        <td>{{name}}</td>
                        <td>{{username}}</td>
                        <td>{{role}}</td>
                        <td><a class="btn btn-dark" href="/show/{{id}}">Ver perfil</a></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

    </div>
</div>